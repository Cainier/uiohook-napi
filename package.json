{
  "name": "uiohook-napi",
  "version": "1.0.1",
  "author": {
    "name": "Alexander Drozdov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SnosMe/uiohook-napi.git"
  },
  "license": "MIT",
  "keywords": [
    "iohook",
    "uiohook",
    "libuiohook",
    "hook",
    "input",
    "keyboard",
    "mouse"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preinstall": "yarn apply-libuiohook-patch",
    "install": "node-gyp-build",
    "prebuild": "prebuildify --napi",
    "build-ts": "tsc",
    "make-libuiohook-patch": "git -C ./libuiohook diff --cached > ./src/libuiohook.patch",
    "apply-libuiohook-patch": "git -C ./libuiohook apply ../src/libuiohook.patch"
  },
  "files": [
    "dist",
    "binding.gyp",
    "libuiohook/src",
    "libuiohook/include",
    "src/lib",
    "src/libuiohook.patch",
    "prebuilds"
  ],
  "devDependencies": {
    "@types/node": "12.x.x",
    "prebuildify": "3.x.x",
    "ts-node": "8.x.x",
    "typescript": "3.x.x"
  },
  "dependencies": {
    "node-gyp-build": "4.x.x"
  }
}
